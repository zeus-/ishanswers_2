<%= form_for @question do |f| %>
  <div class="form-field"> 
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-field">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
    <%= f.submit (@question.persisted? ? "Update" : "Save"), class: "btn btn-default" %>
<% end %>
