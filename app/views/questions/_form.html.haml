/- if @question.errors.any?
/ %ul
/ - @question.errors.full_messages.each do |m|
/ %li= m 
= simple_form_for @question, html: { class: 'form-horizontal' } do |f|
  .container
    = f.input :title, label: "Title" 
    = f.input :description, label: "Description"
    = f.collection_check_boxes :category_ids, Category.order("title"), :id, :title
    = f.file_field :image
    /.form-field 
    /= f.label :title 
    /= f.text_field :title, class: 'form-control' 
    /.form-field
    /= f.label :description 
    /= f.text_field :description, class: 'form-control' 
    /= f.collection_check_boxes :category_ids, Category.order("title"), :id, :title
    %br
    = f.submit (@question.persisted? ? "Update" : "Save"), class: "btn btn-default"
%hr
%br
